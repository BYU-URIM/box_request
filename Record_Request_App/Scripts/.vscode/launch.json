    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Attach Chrome against localhost",
            "smartStep": true,
            "timeout": 5000,
            "linux": {
                "sourceMaps": true,

            },
            "url": "http://localhost:8080/",
            "webRoot": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**/*.js",
                "/node_modules/",

              ]
        }
    ]
}