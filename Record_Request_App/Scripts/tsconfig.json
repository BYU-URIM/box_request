{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "noLib": false,
    "jsx": "react",
    "outDir": "dist",
    "lib": [
      "es2017",
      "dom"
    ],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "types": [
      "node",
      "jest"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "static",
    "dist"
  ],
  "include": [
    "src/**/*",
    "test/**/*",
    "res/**/*",
    "sp_config/**/*",
    "scripts/**/*"
  ]
}