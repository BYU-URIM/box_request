{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "noLib": false,
    "jsx": "react",
    "outDir": "dist",
    "lib": [
      "dom",
      "es6",
      "es7",
      "esnext"
    ],
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "static",
    "dist"
  ],
  "include": [
    "src/**/*",
    "test/**/*",
    "tasks/**/*"
  ]
}